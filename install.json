{
  "resources": {
    "head": [
      {
        "type": "style",
        "src": "./vendor/tooltip-theme-arrows.css"
      },
      {
        "type": "script",
        "src": "./vendor/tether.js"
      },
      {
        "type": "script",
        "src": "./vendor/drop.js"
      },
      {
        "type": "script",
        "src": "./vendor/tooltip.js"
      }
    ],
    "body": [
      {
        "type": "style",
        "src": "./build/app.css"
      },
      {
        "type": "script",
        "src": "./build/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": [
          "username",
          "url"
        ],
        "execute": "INSTALL_SCOPE.setOptionsCommon(INSTALL_OPTIONS)"
      },
      {
        "options": ["text"],
        "execute": "INSTALL_SCOPE.setOptionsRerender(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "username": {
        "order": 0,
        "title": "Twitter username",
        "type": "object",
        "properties": {
          "enabled": {
            "order": 0,
            "title": "Add your username to the visitor's tweet.",
            "type": "boolean",
            "default": false
          },
          "value": {
            "showIf": "username.enabled",
            "order": 1,
            "title": "Twitter username",
            "type": "string",
            "placeholder": "@username"
          }
        }
      },
      "url": {
        "order": 2,
        "title": "Tweet URL",
        "type": "object",
        "properties": {
          "type": {
            "order": 0,
            "format": "radios",
            "type": "string",
            "title": "Choose a URL to add to the tweet",
            "default": "location",
            "enum": [
              "none",
              "location",
              "custom"
            ],
            "enumNames": {
              "none": "Don't add a URL",
              "location": "My website's URL",
              "custom": "A custom URL"
            }
          },
          "custom": {
            "showIf": {
              "url.type": "custom"
            },
            "order": 1,
            "title": "Custom URL",
            "type": "string",
            "placeholder": "http://..."
          }
        }
      },
      "text": {
        "order": 3,
        "title": "Button label",
        "type": "string",
        "default": "Tweet",
        "placeholder": "Tweet"
      }
    }
  }
}
